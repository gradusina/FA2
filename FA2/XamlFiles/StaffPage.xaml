<Page x:Class="FA2.XamlFiles.StaffPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:userControls="clr-namespace:FAIIControlLibrary.UserControls;assembly=FAIIControlLibrary"
      xmlns:behaviors="clr-namespace:FA2.Behaviors"
      xmlns:customControls="clr-namespace:FAIIControlLibrary.CustomControls;assembly=FAIIControlLibrary"
      xmlns:converters="clr-namespace:FA2.Converters"
	  Title="StaffPage" MinWidth="900" MinHeight="600" 
      Loaded="Page_Loaded">
    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Themes/Generic.xaml"/>
            </ResourceDictionary.MergedDictionaries>

            <Style x:Key="LinkDatePickerStyle" TargetType="{x:Type DatePicker}">
                <Setter Property="Foreground" Value="Gray" />
                <Setter Property="FontSize" Value="12"/>
                <Setter Property="FontWeight" Value="Normal"/>
                <Setter Property="IsTodayHighlighted" Value="True" />
                <Setter Property="SelectedDateFormat" Value="Short" />
                <Setter Property="Padding" Value="0" />
                <Setter Property="MinHeight" Value="0"/>
                <Setter Property="MinWidth" Value="0"/>
                <Setter Property="BorderBrush" Value="{x:Null}"/>
                <Setter Property="BorderThickness" Value="0" />
                <Setter Property="VerticalContentAlignment" Value="Stretch"/>
                <Setter Property="CalendarStyle" Value="{StaticResource CommonCalendarStyle}"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type DatePicker}">
                            <Border Name="PART_Border"
                                    BorderThickness="{TemplateBinding BorderThickness}"
                                    Padding="{TemplateBinding Padding}"
                                    BorderBrush="{TemplateBinding BorderBrush}">
                                <Grid x:Name="PART_Root"
                                      HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}"
                                      VerticalAlignment="{TemplateBinding VerticalContentAlignment}">
                                    <DatePickerTextBox x:Name="PART_TextBox" Visibility="Hidden"
                                                       Width="0" Height="0" MinHeight="0" MinWidth="0"/>
                                    <Button x:Name="PART_Button" Grid.Column="1" Focusable="False"
                                            Foreground="Gray"
                                            Style="{StaticResource LinkButton}"
                                            Content="{Binding ElementName=PART_TextBox, Path=Text}"/>
                                    <Popup Grid.Column="0" x:Name="PART_Popup" AllowsTransparency="True" 
                                           Placement="Bottom" PlacementTarget="{Binding ElementName=PART_Border}"
                                           StaysOpen="False" PopupAnimation="Slide"/>
                                </Grid>
                            </Border>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <Style TargetType="{x:Type ListBoxItem}" x:Key="ItemContainerStyle">
                <Setter Property="Background" Value="White"/>
                <Setter Property="BorderBrush" Value="{x:Null}"/>
                <Setter Property="BorderThickness" Value="0,1"/>
                <Setter Property="SnapsToDevicePixels" Value="true" />
                <Setter Property="OverridesDefaultStyle" Value="True"/>
                <Setter Property="MinHeight" Value="30"/>
                <Setter Property="Margin" Value="0,2"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="ListBoxItem">
                            <Border x:Name="Border" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}"
                                    BorderThickness="{TemplateBinding BorderThickness}">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <ContentPresenter Margin="3,0,0,0" VerticalAlignment="Center" HorizontalAlignment="Stretch"/>
                                </Grid>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="BorderBrush" Value="#FF017BCD"/>
                                    <Setter Property="Background" Value="WhiteSmoke"/>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>

            <converters:BooleanToVisibilityConverter x:Key="VisibleOnTrueConverter" True="Visible" False="Collapsed"/>

        </ResourceDictionary>
    </Page.Resources>

    <Grid Background="White">
        <Grid x:Name="MainStaffPageGrid">
            <Grid>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="250"/>
                        <ColumnDefinition Width="0.1*"/>
                        <ColumnDefinition Width="5*" MaxWidth="900"/>
                        <ColumnDefinition Width="0.1*"/>
                    </Grid.ColumnDefinitions>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="1" 
                                Margin="5,5,0,0" SnapsToDevicePixels="True">
                            <Grid Margin="5">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <StackPanel x:Name="GroupsStackPanel" Orientation="Horizontal">
                                    <CheckBox x:Name="GroupFilterCheckBox" Content="" VerticalAlignment="Center" Margin="0" 
                                              Unchecked="GroupFilterCheckBox_Unchecked" 
                                              Checked="GroupFilterCheckBox_Checked"/>
                                    <ComboBox x:Name="WorkerGroupsFilterComboBox" VerticalAlignment="Center" Margin="0,2" Width="210"  Height="30" MinHeight="25"
										      DisplayMemberPath="WorkerGroupName" SelectedValuePath="WorkerGroupID"
										      IsEnabled="{Binding IsChecked, ElementName=GroupFilterCheckBox}"
										      behaviors:WatermarkComboBoxBehavior.EnableWatermark="True"
										      behaviors:WatermarkComboBoxBehavior.Label="Группа"
										      behaviors:WatermarkComboBoxBehavior.LabelStyle="{StaticResource WatermarkLabelStyle}" 
                                              SelectionChanged="WorkerGroupsFilterComboBox_SelectionChanged"/>
                                </StackPanel>
                                <StackPanel x:Name="FactoriesStackPanel" Grid.Row="1" Orientation="Horizontal">

                                    <CheckBox x:Name="FactoryFilterCheckBox" Content="" VerticalAlignment="Center" Margin="0" 
                                              Unchecked="FactoryFilterCheckBox_Unchecked" 
                                              Checked="FactoryFilterCheckBox_Checked"/>

                                    <ComboBox x:Name="FactoriesFilterComboBox" VerticalAlignment="Center" Margin="0,2" Width="210" Height="30" MinHeight="25"
										      DisplayMemberPath="FactoryName" SelectedValuePath="FactoryID"
										      IsEnabled="{Binding IsChecked, ElementName=FactoryFilterCheckBox}"
										      behaviors:WatermarkComboBoxBehavior.EnableWatermark="True"
										      behaviors:WatermarkComboBoxBehavior.Label="Фабрика"
										      behaviors:WatermarkComboBoxBehavior.LabelStyle="{StaticResource WatermarkLabelStyle}" 
                                              SelectionChanged="FactoriesFilterComboBox_SelectionChanged"/>
                                </StackPanel>
                                <StackPanel x:Name="StatusesStackPanel" Grid.Row="2" Orientation="Horizontal">
                                    <CheckBox x:Name="StatusFilterCheckBox" Content="" VerticalAlignment="Center" Margin="0" Unchecked="StatusFilterCheckBox_Unchecked" Checked="StatusFilterCheckBox_Checked"/>
                                    <ComboBox x:Name="WorkerStatusesFilterComboBox" VerticalAlignment="Center" Margin="0,2" Width="210" Height="30" MinHeight="25"
										      DisplayMemberPath="WorkerStatusName" SelectedValuePath="WorkerStatusID"
										      IsEnabled="{Binding IsChecked, ElementName=StatusFilterCheckBox}"
										      behaviors:WatermarkComboBoxBehavior.EnableWatermark="True"
										      behaviors:WatermarkComboBoxBehavior.Label="Статус"
										      behaviors:WatermarkComboBoxBehavior.LabelStyle="{StaticResource WatermarkLabelStyle}"
										      SelectionChanged="WorkerStatusesFilterComboBox_SelectionChanged"/>
                                </StackPanel>
                                <CheckBox x:Name="AvailableInListCheckBox" Content="Отображать доступных" Margin="0,2,2,2" Grid.Row="3" 
                                          VerticalAlignment="Center" FontSize="14" VerticalContentAlignment="Center" 
                                          Foreground="{DynamicResource MainTextBlackBrush}" 
                                          Checked="AvailableInListCheckBox_Checked" 
                                          Unchecked="AvailableInListCheckBox_Unchecked"/>
                            </Grid>
                        </Border>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="1" Grid.Row="1" 
                                Margin="5,5,0,5" SnapsToDevicePixels="True">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition Height="35"/>
                                </Grid.RowDefinitions>
                                <ListBox x:Name="StaffListBox" DisplayMemberPath="Name" SelectedValuePath="WorkerID" BorderThickness="0"
									     Style="{StaticResource WorkersNameListBox}"
									     SelectionChanged="StaffListBox_SelectionChanged"
									     ScrollViewer.HorizontalScrollBarVisibility="Disabled"/>

                                <Label Grid.Row="0" x:Name="StaffCountLabel" Margin="0,0,12,0" Content="990" VerticalAlignment="Bottom" HorizontalAlignment="Right" Width="Auto" Foreground="{DynamicResource AdditTextBlackBrush}" FontSize="12"  />
                                <TextBox x:Name="SearchTextBox" Grid.Row="1" TextWrapping="Wrap" TextChanged="SearchTextBox_TextChanged" FontSize="14" Foreground="{DynamicResource MainTextBlackBrush}">
                                    <TextBox.Background>
                                        <ImageBrush ImageSource="/Resources/SearchIcon.png" AlignmentX="Right" Stretch="None" Viewport="0,0,1,1" Viewbox="1,0,1,1" />
                                    </TextBox.Background>
                                </TextBox>
                            </Grid>
                        </Border>
                    </Grid>

                    <Grid Name="MainStaffGrid" Grid.Column="2">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Border BorderBrush="LightGray" BorderThickness="1" CornerRadius="1" 
                                Margin="5,5,5,0" SnapsToDevicePixels="True" Height="250">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Grid Background="{DynamicResource DarkBackground}" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="SaveStaffPersonalInfo" Content="Сохранить анкету" Width="150" 
                                            Foreground="White" VerticalContentAlignment="Center" VerticalAlignment="Center" 
                                            HorizontalAlignment="Left" Margin="2,2,2,2" 
                                            Style="{StaticResource BlueBtn}"
                                            Click="SaveStaffPersonalInfo_Click"/>
                                    <ComboBox Grid.Column="1" x:Name="StaffStatusComboBox" Margin="0" IsReadOnly="True"
                                              DisplayMemberPath="WorkerStatusName" SelectedValuePath="WorkerStatusID" Height="Auto" 
                                              VerticalAlignment="Center" HorizontalAlignment="Right" IsTextSearchEnabled="False" 
                                              Style="{StaticResource ResourceKey=LabelComboBoxStyle}"
                                              SelectedValue="{Binding Path=StatusID, Mode=OneWay}"
                                              SelectionChanged="StaffStatusComboBox_SelectionChanged"/>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="180"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Grid Background="{DynamicResource LightBackground}">
                                        <Border Margin="5,6,5,5" BorderBrush="Gray" CornerRadius="2"
                                                Background="Gray"  VerticalAlignment="Top"
                                                Width="{Binding ElementName=ImageBorder, Path=ActualWidth}"
                                                Height="{Binding ElementName=ImageBorder, Path=ActualHeight}">
                                            <Border.Effect>
                                                <BlurEffect Radius="7"/>
                                            </Border.Effect>
                                        </Border>
                                        <Border Name="ImageBorder" BorderThickness="0" CornerRadius="2"
                                                BorderBrush="Gray" Background="White" VerticalAlignment="Top"
                                                SnapsToDevicePixels="True" Margin="5">
                                            <Image x:Name="StaffPhotoImage" Margin="1"
                                                   MouseDown="StaffPhotoImage_MouseDown"/>
                                        </Border>
                                    </Grid>
                                    <Grid Grid.Column="1" Background="Transparent">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <TextBlock x:Name="NameTextBlock" HorizontalAlignment="Left" FontWeight="Medium"
                                                   Margin="5,5,5,0" FontFamily="Arial" FontSize="20" 
                                                   Foreground="{DynamicResource MainTextBlackBrush}"
                                                   Text="{Binding ElementName=StaffNameTextBox, Path=Text, Mode=OneWay}"/>
                                        <TextBlock x:Name="StaffBirthTextBlock" HorizontalAlignment="Left" FontSize="16" Margin="5,5,5,0" Grid.Row="1"
                                                   Foreground="{DynamicResource MainTextBlackBrush}"
                                                   Text="{Binding Path=Birth, Mode=OneWay, Converter={StaticResource BirthToAgeConverter}}"/>
                                        <Grid Grid.Row="2">
                                            <Rectangle VerticalAlignment="Top" Height="1" Fill="LightGray" SnapsToDevicePixels="True"
                                                       HorizontalAlignment="Left" Margin="3,5" Width="300"/>
                                            <ItemsControl x:Name="StaffSummProfessionsListBox" BorderThickness="0" IsTextSearchEnabled="False" Margin="5"
                                                          Background="Transparent" ScrollViewer.HorizontalScrollBarVisibility="Disabled" Width="Auto">
                                                <ItemsControl.ItemTemplate>
                                                    <DataTemplate>
                                                        <TextBlock TextWrapping="Wrap" FontSize="16" Margin="0,5,0,0" TextAlignment="Left"
                                                                   Foreground="{DynamicResource MainTextBlackBrush}" >
                                                            <TextBlock.Text>
                                                                <MultiBinding  StringFormat="{}{0} ({1}, {2})">
                                                                    <Binding Path="ProfessionID" Converter="{StaticResource IdToProfessionConverter}"/>
                                                                    <Binding Path="Rate"/>
                                                                    <Binding Path="FactoryID" Converter="{StaticResource IdToFactoryConverter}"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </DataTemplate>
                                                </ItemsControl.ItemTemplate>
                                            </ItemsControl>
                                        </Grid>
                                        
                                        <Grid Grid.Row="4" Height="25"
                                              Background="{DynamicResource MidBackground}">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="*"/>
                                                <ColumnDefinition Width="150"/>
                                                <ColumnDefinition Width="150"/>
                                            </Grid.ColumnDefinitions>
                                            <Label VerticalContentAlignment="Center" FontSize="14" Margin="5,0"
                                                   Padding="0" VerticalAlignment="Center" ContentStringFormat="№ пропуска: {0}"
                                                   Foreground="{DynamicResource MainTextBlackBrush}"
                                                   Content="{Binding Path=W26}"/>
                                            <!--<Button x:Name="AddW26Button" Content="Прикрепить пропуск" Grid.Column="1" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Center"  Height="30" Click="AddW26Button_Click"/>
                                                <Button x:Name="ClearW26Button" Content="Сброс" Grid.Column="2" HorizontalAlignment="Stretch" Margin="2" VerticalAlignment="Center"  Height="30" Click="ClearW26Button_Click"/>-->
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Border>
                        <TabControl Name="MainStaffTabControl" Grid.Row="1" Margin="5" BorderBrush="LightGray">
                            <TabItem Header="Основная информация" FontSize="14" BorderBrush="LightGray">
                                <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled">
                                    <Grid Background="White">
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>
                                        <Expander Header="РУКОВОДИТЕЛИ" Name="MainWorkersExpander" IsExpanded="True" Margin="4,10,4,4">
                                            <Grid>
                                                <ItemsControl Name="MainWorkersListBox" BorderThickness="0" Margin="5">
                                                    <ItemsControl.ItemTemplate>
                                                        <DataTemplate>
                                                            <Border BorderThickness="1" CornerRadius="1" SnapsToDevicePixels="True" Margin="2" Width="250"
                                                                BorderBrush="{DynamicResource BordersBrush}">
                                                                <Grid Background="WhiteSmoke">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <Grid>
                                                                        <Grid.ColumnDefinitions>
                                                                            <ColumnDefinition Width="Auto"/>
                                                                            <ColumnDefinition/>
                                                                        </Grid.ColumnDefinitions>
                                                                        <Border Height="40" Width="35" BorderBrush="LightGray"
                                                                            BorderThickness="1" CornerRadius="1" Margin="2">
                                                                            <Image Width="Auto" Height="Auto" Stretch="UniformToFill"
                                                                               VerticalAlignment="Center" HorizontalAlignment="Center"
                                                                               DataContext="{Binding MainWorkerID, Converter={StaticResource IdToStaffPhotoConverter}}" 
                                                                               Source="{Binding AsyncValue, NotifyOnSourceUpdated=True}"/>
                                                                        </Border>
                                                                        <TextBlock Margin="5,0" FontWeight="Medium" Grid.Column="1"
                                                   Text="{Binding MainWorkerID, Converter= {StaticResource IdToNameConverter}, ConverterParameter= ShortName}"
                                                   FontSize="14" Foreground="#FF444444"/>
                                                                    </Grid>


                                                                    <StackPanel VerticalAlignment="Center" Grid.Row="2" Orientation="Vertical">

                                                                        <TextBlock Margin="5,0" TextWrapping="Wrap" Foreground="#4CAF50"  FontSize="10" Text="группа/бригада"/>
                                                                        <TextBlock Margin="5,0" TextWrapping="Wrap" Foreground="#FF017BCD"  FontSize="12" Text="{Binding MyWorkersGroupID, Converter={StaticResource IdToMyWorkersGroupNameConverter} }"/>

                                                                        <StackPanel VerticalAlignment="Center" Orientation="Vertical" DataContext="{Binding WorkerProfessionID, Converter={StaticResource WorkerProffessionIdtoInfoConverter}}">
                                                                            <TextBlock Margin="5,0" TextWrapping="Wrap" Foreground="#4CAF50"  FontSize="10" Text="должность/профессия в группе"/>
                                                                            <TextBlock Margin="5,0" TextWrapping="Wrap" Foreground="#FF017BCD"  FontSize="12" Text="{Binding ProfessionID, Converter={StaticResource IdToProfessionConverter} }"/>
                                                                            <StackPanel Margin="5,0"  Orientation="Horizontal">
                                                                                <TextBlock FontSize="10" Foreground="DarkGray" Text="{Binding FactoryID, Converter={StaticResource IdToFactoryConverter}}"/>
                                                                                <TextBlock FontSize="10"  Foreground="DarkGray" Text="{Binding Rate, StringFormat='ставка: {0}'}" Margin="3,0,0,0"/>
                                                                                <TextBlock FontSize="10"  Foreground="DarkGray" Text="{Binding Category, StringFormat='разряд: {0}'}" Margin="3,0,0,0"/>
                                                                            </StackPanel>
                                                                        </StackPanel>
                                                                    </StackPanel>
                                                                </Grid>
                                                            </Border>
                                                        </DataTemplate>
                                                    </ItemsControl.ItemTemplate>
                                                    <ItemsControl.ItemsPanel>
                                                        <ItemsPanelTemplate>
                                                            <WrapPanel Orientation="Horizontal" IsItemsHost="True"/>
                                                        </ItemsPanelTemplate>
                                                    </ItemsControl.ItemsPanel>
                                                </ItemsControl>
                                            </Grid>
                                        </Expander>
                                        <Expander x:Name="StaffProfessionsExpander" Grid.Row="1" Header="ДОЛЖНОСТЬ/ПРОФЕССИЯ" IsExpanded="False" Margin="4,10,4,4">
                                            <Grid x:Name="StaffProfessionsGrid">
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                    <RowDefinition Height="Auto"/>
                                                </Grid.RowDefinitions>
                                                <TextBlock HorizontalAlignment="Left" Margin="5,5,0,0" Text="Основная" 
                                                           VerticalAlignment="Center" FontSize="14" 
                                                           Foreground="{DynamicResource BlueForeground}"/>
                                                <DataGrid x:Name="MainWorkersProfessionsDataGrid" Grid.Row="1" HeadersVisibility="None" 
                                                           CanUserAddRows="False" ScrollViewer.HorizontalScrollBarVisibility="Hidden"
                                                          IsReadOnly="True" BorderBrush="LightGray" BorderThickness="1,1,0,0" Margin="5"
                                                          Style="{StaticResource CommonDataGridStyle}">
                                                    <DataGrid.Resources>
                                                        <Style TargetType="{x:Type DataGridCell}" BasedOn="{StaticResource CommonDataGridCellStyle}">
                                                            <EventSetter Event="PreviewMouseLeftButtonDown" Handler="DoCheckRow"/>
                                                        </Style>
                                                    </DataGrid.Resources>
                                                    <DataGrid.RowDetailsTemplate>
                                                        <DataTemplate>
                                                            <Grid Background="#07000000">
                                                                <Grid  Margin="3">
                                                                    <Grid.RowDefinitions>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition Height="Auto"/>
                                                                        <RowDefinition/>
                                                                    </Grid.RowDefinitions>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="1" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Content="Должностной оклад : " Margin="0,0,5,0" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" IsReadOnly="True" Value="{Binding BasesSalary, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" Width="90" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N0" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="руб." Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="2" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Margin="0,0,5,0" Content="Повышения :" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="3" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Content="по контракту : " ToolTip="Тарифный коэффициент по ЕТКС" Margin="0,0,5,0" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding perIncByContract, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="50" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N2" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="% , " Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding IncByContract, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="90" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N0" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="руб." Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="4" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Content="по должности : " ToolTip="Тарифный коэффициент по ЕТКС" Margin="0,0,5,0" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding perIncByPost, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="50" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N2" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="% , " Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding IncByPost, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="90" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N0" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="руб." Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="5" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Content="по технологич. видам работ, производствам : " Margin="0,0,5,0" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding perIncByOther, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="50" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N2" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="% , " Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding IncByOther, UpdateSourceTrigger=PropertyChanged, IsAsync=True}" IsReadOnly="True" Width="90" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N0" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="руб." Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Left" Grid.Row="6" Margin="0,0,0,0">
                                                                        <Label FontSize="14" Margin="0,0,5,0" Content="Надбавка по контракту :" Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                        <customControls:NumericControl Background="Transparent" Value="{Binding AdditWages, UpdateSourceTrigger=PropertyChanged, IsAsync=True}"  IsReadOnly="True" Width="90" Margin="0,2" FontSize="14" Padding="0" Height="19" 
                                                                                                       FormatString="N0" MinHeight="0" BorderThickness="0"/>
                                                                        <Label FontSize="14" Margin="15,0,5,0" Content="руб." Padding="0" VerticalAlignment="Center" Foreground="#B2000000"/>
                                                                    </StackPanel>
                                                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Grid.Row="7" Margin="0,0,0,0">
