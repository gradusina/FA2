                            <Button x:Name="MinimazeButton" FontSize="18" FontWeight="Black"
                                    Content="_" Margin="0,0,5,0" VerticalAlignment="Top"
                                    Style="{DynamicResource WindowButton}" 
                                    Click="MinimazeButton_Click"/>
