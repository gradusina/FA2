    <Window.Background>
        <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0" SpreadMethod="Repeat">
            <LinearGradientBrush.RelativeTransform>
                <TransformGroup>
                    <ScaleTransform CenterY="0.5" CenterX="0.5"/>
                    <SkewTransform CenterY="0.5" CenterX="0.5"/>
                    <RotateTransform Angle="270" CenterY="0.5" CenterX="0.5"/>
                    <TranslateTransform/>
                </TransformGroup>
            </LinearGradientBrush.RelativeTransform>
            <GradientStop Color="#FF0F75C5" Offset="1"/>
            <GradientStop Color="#FF2196F3"/>
            <GradientStop Color="#FF2196F3" Offset="0.418"/>
            <GradientStop Color="#FF2092EC" Offset="0.678"/>
        </LinearGradientBrush>
    </Window.Background>

    <!--<Window.Triggers>
        <EventTrigger RoutedEvent="FrameworkElement.Loaded">
            <BeginStoryboard Storyboard="{StaticResource OnLoadedStoryboard}"/>
        </EventTrigger>
    </Window.Triggers>-->

    <Grid>
        <Border CornerRadius="1"  >
            <Grid>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="Auto" />
                        <RowDefinition />
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <Grid Row="1" Margin="10" x:Name="ProgressGrid" Visibility="Collapsed">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20" />
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="20" />
                        </Grid.RowDefinitions>
                        <Label x:Name="CommonProgressLabel" Grid.Row="0" Content="0" Foreground="White" Margin="2,0,2,0" ContentStringFormat="Общий ход обновления ({0}%)"/>
                        <ProgressBar x:Name="UpdateProgressBar" Grid.Row="1" Maximum="100" Margin="2"></ProgressBar>
                        <Label x:Name="FileProgressLabel" Grid.Row="2" Content="0" Foreground="White" Margin="2,0,2,0" ContentStringFormat="Загрузка обновлений ({0}%)"/>
                        <ProgressBar x:Name="DownloadProgressBar" Grid.Row="3" Maximum="100" Margin="2"/>

                    </Grid>

                    <Canvas x:Name="WaitCanvas" Grid.Row="1"  Width="1" Height="1"  >

                        <Canvas.RenderTransform>
                            <TransformGroup>

                                <RotateTransform x:Name="angle" Angle="0" CenterX="0.5" CenterY="0.5"/>

                                <!-- Ideally remove the translation and scale from here
                 and let the container apply them instead -->

                                <TranslateTransform X="-0.5" Y="-0.5"/>
                                <ScaleTransform ScaleX="70" ScaleY="70"/>

                            </TransformGroup>
                        </Canvas.RenderTransform>

                        <Canvas.Triggers>
                            <EventTrigger RoutedEvent="Canvas.Loaded">
                                <BeginStoryboard>
                                    <Storyboard x:Name="rotation">
                                        <DoubleAnimation To="1" Duration="0:0:1"
                                                    Storyboard.TargetName="content"
                                                    Storyboard.TargetProperty="Opacity"/>
                                        <DoubleAnimation From="0" To="359" Duration="0:0:3" RepeatBehavior="Forever"
                                                    Storyboard.TargetName="angle"
                                                    Storyboard.TargetProperty="Angle"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </Canvas.Triggers>

                        <Canvas Name="content" Opacity="1">

                            <Path Width="1" Height="1" Margin="0" Stretch="Fill" StrokeThickness="0.1" StrokeStartLineCap="Round"  StrokeEndLineCap="Round" RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <TransformGroup>
                                        <ScaleTransform/>
                                        <SkewTransform/>
                                        <RotateTransform Angle="349"/>
                                        <TranslateTransform/>
                                    </TransformGroup>
                                </Path.RenderTransform>
                                <Path.Stroke>
                                    <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                        <GradientStop Color="White" Offset="0"/>
                                        <GradientStop Offset="0.992"/>
                                    </LinearGradientBrush>
                                </Path.Stroke>
                                <Path.Data>
                                    <PathGeometry>
                                        <PathFigure StartPoint="1,0">
                                            <ArcSegment Point="1.5,-1" RotationAngle="90" SweepDirection="Clockwise" IsLargeArc="True" Size="1,1"/>
                                        </PathFigure>
                                    </PathGeometry>
                                </Path.Data>
                            </Path>
                        </Canvas>

                    </Canvas>

                    <StackPanel VerticalAlignment="Bottom" Orientation="Horizontal" Margin="5,5,5,0" Width="320" 
                                HorizontalAlignment="Left" Grid.Row="3">
                        <TextBlock x:Name="StatusTextBlock" Foreground="#CCFFFFFF" Margin="0"
                                   HorizontalAlignment="Left"  FontSize="12"
							       Text="{Binding StatusText, ElementName=SplashWindow1, FallbackValue='Строка состояния'}"/>
                        <TextBlock x:Name="DotTextBlock" Foreground="#CCFFFFFF" Margin="0"
							       HorizontalAlignment="Left"  FontSize="12">
                            <TextBlock.Triggers>
                                <EventTrigger RoutedEvent="TextBlock.Loaded">
                                    <BeginStoryboard>
                                        <Storyboard>
                                            <StringAnimationUsingKeyFrames Storyboard.TargetName="DotTextBlock" 
                                                           Storyboard.TargetProperty="Text" RepeatBehavior="Forever" AutoReverse="False" >
                                                <DiscreteStringKeyFrame Value="."   KeyTime="0:0:0" />
                                                <DiscreteStringKeyFrame Value=". ."  KeyTime="0:0:0.5" />
                                                <DiscreteStringKeyFrame Value=". . ." KeyTime="0:0:1" />
                                                <DiscreteStringKeyFrame Value=". . . ." KeyTime="0:0:1.5" />
                                            </StringAnimationUsingKeyFrames>
                                        </Storyboard>
                                    </BeginStoryboard>
                                </EventTrigger>
                            </TextBlock.Triggers>

                        </TextBlock>
                    </StackPanel>

                </Grid>

            </Grid>
        </Border>
    </Grid>
</Window>